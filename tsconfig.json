{
  "compilerOptions": {
    "jsx": "react",
    "noEmit": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "typeRoots": ["./src/global.d.ts", "node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "utils",
    "vite.config.ts",
    "node_modules/@types",
  ]
}
